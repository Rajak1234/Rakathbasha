#include <iostream>
using namespace std;

int main()
{
    int n;
    cout<<"Enter the no of rows:";
    cin>>n;
    for (int i = n; i >= 1; --i) {
        for (int k = 0; k < n - i; ++k) {
            cout << "  ";
        }
        for (int j = i; j <= 2 * i - 1; ++j) {
            cout << "* ";
        }
        for (int j = 0; j < i - 1; ++j) {
            cout << "* ";
        }
        cout << endl;
    }
    return 0;
}
